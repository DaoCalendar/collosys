@model ColloSys.UserInterface.AuthNAuth.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
                      
    <div class="modal" options="modelOption" style="top: 22%; width: 60%;">
        <div class="modal-body well-small">
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span6">
                        <img src="~/Content/layout/SCBLoginImage.gif" />
                    </div>

                    <div class="span6">
                        <div class=" well" data-ng-controller="loginController" data-ng-cloak="" style="background-color: #0094D2;">

                            <div data-ng-form="formLogin">

                                <p class="loginPageLabge" style="font-weight: bold; text-align: center">User Login</p>

                                @Html.ValidationSummary(false, string.Empty, new { @class = "alert alert-error" })

                                <div class="row-fluid">
                                    <div class="control-group">
                                        <label class="control-label" for="UserName" style="color: white;">User Id</label>
                                        <div class="controls">
                                            <input data-ng-model="login.UserName" name="UserName" placeholder="Enter User Name" type="text" data-ng-required="true" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <div class="control-group">
                                        <label class="control-label" style="color: white;" for="UserPassword">Password</label>
                                        <div class="controls">
                                            <input data-ng-model="login.Password" name="UserPassword" placeholder="Enter Password" type="password" data-ng-required="true" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row-fluid well-small">
                                    <div class="control-group">
                                        <div class="controls">
                                            <button class="btn btn-success" type="submit" value="Log in">Log In</button>
                                            &nbsp;
                                            @Html.ActionLink("Forgot Password ?", "ForgotPassword", "Account", Model,new { @class="loginPageLabge"})
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>                                          
        </div>
    </div>                        
      
}



@section Scripts {
    <script type="text/javascript">
        csapp.controller("loginController", ["$scope", function ($scope) {
            $scope.modelOption = {
                backdropFade: true,
                dialogFade: true
            };

        }]);
    </script>
}
