@{
    ViewBag.Title = "RegistrationDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" data-ng-cloak="" data-ng-controller="Registration">
    <form name="myForm" class="form-horizontal" novalidate>
        <div class="panel">
            <div class="panel-heading">Registration Details</div>
            
            <div class="row-fluid">
                <div class="control-group">
                    <label class="control-label">TAN</label>
                    <div class="controls">
                        <input name="tan" type="text" data-ng-model="temp.tan" data-ng-maxlength=30 data-ng-pattern="/^\-?\d+((\.|\,)\d+)?$/" />
                        <div class="field-validation-error" data-ng-show="myForm.tan.$error.maxlength">{{val.MaxLength(30)}}</div>
                        <div class="field-validation-error" data-ng-show="myForm.tan.$dirty && myForm.tan.$error.pattern">{{val.OnlyNumbers()}}</div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="control-group ">
                    <label class="control-label">PAN</label>
                    <div class="controls">
                        <input type="text" data-ng-model="temp.pan" name="pan" data-ng-pattern="/^([A-Z]{5})(\d{4})([a-zA-Z]{1})$/" required/>
                        <div class="field-validation-error" data-ng-show=" myForm.pan.$error.pattern">{{Pattern()}}</div>
                        <div class="spancolor">Ex.AAAAA0000A</div>
                    </div>
                </div>
            </div>

            <div  class="row-fluid">
                <div class="control-group ">
                    <label class="control-label">Registration No</label>
                    <div class="controls">
                        <input type="text" data-ng-maxlength=30 data-ng-model="temp.registration" name="registration" data-ng-pattern="/^[a-zA-Z0-9]+$/"/>
                        <div class="field-validation-error" data-ng-show="myForm.registration.$error.maxlength ">{{val.MaxLength(30)}}</div>
                        <div class="field-validation-error" data-ng-show="myForm.registration.$error.pattern">{{val.SpecialCharNotAllow()}}</div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="control-group ">
                    <label class="control-label">Service Tax</label>
                    <div class="controls">
                        <input type="text" name="service"data-ng-model="temp.service" data-ng-maxlength=30 data-ng-pattern="/^\-?\d+((\.|\,)\d+)?$/"/> 
                        <div class="field-validation-error" data-ng-show="myForm.service.$error.maxlength"> {{val.MaxLength(30)}}</div>
                        <div class="field-validation-error" data-ng-show=" myForm.service.$error.pattern">{{val.OnlyNumbers()}}</div>
                    </div>
                </div>
            </div>
            <div class="row-fluid align-right">
                <div class="control-group ">
                    <div class="controls">
                        <input type="submit" value="Back" class="btn btn-success" data-ng-click="temp=null"/>
                        <input type="submit" value="Next" class="btn btn-success" data-ng-disabled="myForm.pan.$pristine ||myForm.$invalid" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<style>
    .spancolor {
        color: grey;
    }
</style>
@section scripts
{
    <script src="~/Areas/Stakeholder2/ViewModels/RegistrationDetails.js"></script>
}
