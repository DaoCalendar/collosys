@{
    ViewBag.Title = "AddHierarchy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" data-ng-cloak="" data-ng-controller="StakeholderHierarchy">
 
        <form name="MyForm" class="form-horizontal" data-ng-init="step=1" novalidate>

            <!--Step 1-->
            <div class="panel" data-ng-form="step1form" data-ng-show="step==1">

                <div class="panel-heading">Step 1</div>
                <div class="row-fluid" style="height: 400px">
                   
                    <!--Designation-->
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label">Designation : </label>
                            <div class="controls">
                                <input name="designation" type="text" data-ng-model="stakeholder.designation" data-ng-maxlength="20" data-ng-minlength="2" data-ng-pattern="/^[a-zA-Z]+$/" required />
                                <div class="field-validation-error" data-ng-show="page1.designation.$error.maxlength">{{val.MaxLength(20)}}</div>
                                <div class="field-validation-error" data-ng-show="page1.designation.$error.minlength">At least 2 char required</div>
                                <div class="field-validation-error" data-ng-show="page1.designation.$error.pattern">only text allowed</div>
                            </div>
                        </div>
                    </div>

                    <!--Hierarchy-->
                    <div class="row-fluid ">
                        <div class="control-group">
                            <label class="control-label">Hierarchy : </label>
                            <div class="controls">
                                <select class="input-large" data-ui-select2="" data-ng-model="stakeholder.Hierarchy" data-ng-required="true" data-ng-change="stakeholder.reportsToDesignation=null">
                                    <option value=""></option>
                                    <option data-ng-repeat="data in HierarchyList|unique:'Hierarchy'">{{data.Hierarchy}}</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!--Reports To-->
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label">ReportsTo : </label>
                            <div class="controls">
                                <select class="input-large" data-ui-select2="" data-ng-required="true" data-ng-model="stakeholder.reportsToDesignation">
                                    <option value=""></option>
                                    <option data-ng-repeat="data in HierarchyList | filter : {'Hierarchy' : stakeholder.Hierarchy } | orderBy: 'PositionLevel'"
                                            value="{{data.Id}}">{{DesignationName(data)}}</option>
                                </select>&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} Reports to Designation of {{stakeholder.Hierarchy}} Hierarchy</span>
                            </div>
                        </div>
                    </div>

                    <!--Location Level-->
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label">Location Level : </label>
                            <div class="controls">
                                <select class="input-large" multiple="multiple" data-ui-select2="" data-ng-required="true" data-ng-model="stakeholder.LocationLevel">
                                    <option data-ng-repeat="data in LocationlevelList">{{data}}</option>
                                </select>
                            </div>
                        </div>
                    </div>

                  
                </div>
                <div class="panel-footer text-right">
                    <input type="submit" value="Next" class="btn btn-success" data-ng-disabled="step1form.$invalid" data-ng-click="step=2" />
                    <input type="submit" value="Cancel" class="btn btn-warning" data-ng-click="stakeholder=null" />
                </div>

            </div>

            <!--Step 2-->
            <div class="panel" data-ng-form="step2form" data-ng-show="step==2">

                <div class="panel-heading">Step 2</div>
                <div class="row-fluid" style="height: 400px">
                    <!--IsUser-->
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label">Is User : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.IsUser"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} is user of collosys or not</span>
                            </div>
                        </div>
                    </div>

                    <!--IsIndividual-->
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label">Is Individual : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.Individual" data-ng-change="stakeholder.IsEmployee=false"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} is an Individual or any Organization </span>
                            </div>
                        </div>
                    </div>

                    <!--Registration-->
                    <div class="row-fluid" data-ng-show="!stakeholder.Individual">
                        <div class="control-group">
                            <label class="control-label">Registration : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasRegistration"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">Is {{stakeholder.designation}} needs Registration</span>

                            </div>
                        </div>
                    </div>

                    <!--IsEmployee-->
                    <div class="row-fluid" data-ng-show="stakeholder.Individual">
                        <div class="control-group">
                            <label class="control-label">Is Employee : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.IsEmployee"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">Is {{stakeholder.designation}} Employee of collosys</span>
                            </div>
                        </div>
                    </div>

                    <!--Is Highest Level designation-->
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label">Is Highest Level Designation : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.ManageReportsTo"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} having any highest level designation</span>
                            </div>
                        </div>
                    </div>

                    <!--Has Address-->
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label">Has Address : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasAddress"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} has address </span>
                            </div>
                        </div>
                    </div>

                    <!--Has multiple Address-->
                    <div class="row-fluid" data-ng-show="stakeholder.HasAddress">
                        <div class="control-group">
                            <label class="control-label">Has Multiple Address : </label>
                            <div class="controls">
                                <input type="button" value="No" class="btn" data-ng-disabled="true" />
                            </div>
                        </div>
                    </div>

                </div>


                <div class="panel-footer text-right">
                    <input type="submit" value="Back"  class="btn btn-inverse" data-ng-click="step=1" />
                    <input type="submit" value="Next" class="btn btn-success" data-ng-click="step=3" />
                    <input type="submit" value="Cancel" class="btn btn-warning" />
                </div>

            </div>

            <!--Step 3-->
            <div class="panel" data-ng-form="step3form" data-ng-show="step==3">

                <div class="panel-heading">Step 3</div>
                <div class="row-fluid" style="height: 400px">
                    <!--Has Working-->
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label">Has Working : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasWorking" data-ng-change="ResetBtnValue()"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} has working</span>
                            </div>
                        </div>
                    </div>

                    <!--Has Bucket-->
                    <div class="row-fluid" data-ng-show="stakeholder.HasWorking">
                        <div class="control-group">
                            <label class="control-label">Has Buckets : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasBuckets"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} has Buckets</span>
                            </div>
                        </div>
                    </div>

                    <!--Is in Allocation-->
                    <div class="row-fluid" data-ng-show="stakeholder.HasWorking">
                        <div class="control-group">
                            <label class="control-label">Is In Allocation : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.IsInAllocation" data-ng-change="stakeholder.IsInField=false"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} is in allocation</span>
                            </div>
                        </div>
                    </div>

                    <!--Is in field-->
                    <div class="row-fluid" data-ng-show="stakeholder.IsInAllocation">
                        <div class="control-group">
                            <label class="control-label">Is In Field : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.IsInField"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} is in field</span>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="panel-footer text-right">
                    <input type="submit" value="Back" data-ng-model="back" class="btn btn-inverse" data-ng-click="step=2" />
                    <input type="submit" value="Next" class="btn btn-success" data-ng-click="step=4" />
                    <input type="submit" value="Cancel" class="btn btn-warning" />
                </div>

            </div>

            <!--Step 4-->
            <div class="panel" data-ng-form="step4form" data-ng-show="step==4">

                <div class="panel-heading">Step 4</div>
                <div class="row-fluid" style="height: 400px">
                    <!--Has payment-->
                    <div class="row-fluid">
                        <div class="control-group">
                            <label class="control-label">Has Payment : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasPayment" data-ng-change="ResetPaymentChlidVal()"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} has Payment</span>
                            </div>
                        </div>
                    </div>

                    <!--Has Bank Details-->
                    <div class="row-fluid" data-ng-show="stakeholder.HasPayment">
                        <div class="control-group">
                            <label class="control-label">Has Bank Details : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasBankDetails"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} Has Bank Details</span>
                            </div>
                        </div>
                    </div>

                    <!--Has mobile Travel-->
                    <div class="row-fluid" data-ng-show="stakeholder.HasPayment">
                        <div class="control-group">
                            <label class="control-label">Has Mobile Travel : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasMobileTravel"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} Has Mobile Travel</span>
                            </div>
                        </div>
                    </div>

                    <!--Has variable-->
                    <div class="row-fluid" data-ng-show="stakeholder.HasPayment">
                        <div class="control-group">
                            <label class="control-label">Has Variable : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasVariable"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} Has Variable</span>
                            </div>
                        </div>
                    </div>

                    <!--Has fixed-->
                    <div class="row-fluid" data-ng-show="stakeholder.HasPayment">
                        <div class="control-group">
                            <label class="control-label">Has Fixed : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasFixed" data-ng-change="stakeholder.HasFixedIndividual=false"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} Has Fixed</span>
                            </div>
                        </div>
                    </div>

                    <!--Has fixed Individual-->
                    <div class="row-fluid" data-ng-show="stakeholder.HasFixed">
                        <div class="control-group">
                            <label class="control-label">Has Fixed Individual : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasFixedIndividual"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} Has Fixed Individual</span>
                            </div>
                        </div>
                    </div>

                    <!--Has service charge-->
                    <div class="row-fluid" data-ng-show="stakeholder.HasPayment">
                        <div class="control-group">
                            <label class="control-label">Has Service Charge : </label>
                            <div class="controls">
                                <div btn-switch data-ng-model="stakeholder.HasServiceCharge"></div>
                                &nbsp;&nbsp;&nbsp;<span style="color: gray">{{stakeholder.designation}} Has Service Charge </span>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="panel-footer text-right">
                    <input type="submit" value="Back" data-ng-model="back" class="btn btn-inverse" data-ng-click="step=3" />
                    <input type="submit" value="Save" class="btn btn-success" data-ng-click="saveData(stakeholder)" data-ng-disabled="step1form.$invalid" />
                    <input type="submit" value="Cancel" class="btn btn-warning" />
                </div>

            </div>

        </form>
       
</div>

@section scripts
{
    <script src="~/Areas/Stakeholder2/ViewModels/StakeholderHierarchy.js"></script>
}
