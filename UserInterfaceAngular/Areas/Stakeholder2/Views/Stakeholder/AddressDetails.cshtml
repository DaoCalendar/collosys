@{
    ViewBag.Title = "AddressDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddressDetails</h2>
<div class="form-horizontal " ng-controller="basicInfoController">
    <form name="validationForm">
    <div class="row-fluid">
        <div class="control-group span5">
            <label class="control-label">Line 1</label>
            <div class="controls">
                <input type="text" ng-maxlength="100" ng-model="addr.Line1" required />
            </div>
        </div>
        <div class="control-group span5">
            <label class="control-label">Line 2</label>
            <div class="controls">
                <input type="text" class="input-large" ng-model="addr.Line2" ng-maxlength="100" required>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="control-group span5">
            <label class="control-label">Line 3</label>
            <div class="controls">
                <input type="text" ng-maxlength="100" ng-model="addr.Line3" />
            </div>
        </div>
        <div class="control-group span5">
            <label class="control-label">Landline No</label>
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-phone"></i></span>
                    <span class="add-on">+91</span>

                    <input type="text" class="input-medium" ng-pattern="/^[0-9]{11}$/" name="landline" ng-model="addr.LandlineNo">
                </div>
                <div ng-show="validationForm.landline.$invalid && validationForm.landline.$dirty || validationForm.pincode.$valid">
                    <span class="field-validation-error" ng-show="validationForm.landline.$invalid && validationForm.landline.$error.pattern"><i class="icon-remove"></i>Invalid LandLine Number</span>
                    <span class="field-validation-valid" ng-show="validationForm.landline.$valid"><i class="icon-ok"></i>Valid </span>
                    <span class="text-success" ng-show="validationForm.email.$pristine"></span>
                </div>

            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="control-group span5">
            <label class="control-label">Pincode</label>
            <div class="controls">
                <input type="text"
                       class="input-medium"
                       data-ng-model="PincodeNew"
                       typeahead="c.Area for c in Pincodes($viewValue, 'Area')" required>
            </div>


            <div ng-show="validationForm.pincode.$invalid && validationForm.pincode.$dirty ">
                <span class="field-validation-error" ng-show="validationForm.pincode.$invalid && validationForm.pincode.$error.pattern"><i class="icon-remove"></i>Invalid Pincode</span>
            </div>
        </div>
        <div class="control-group span5">
            <div class="row-fluid">
            </div>
        </div>
    </div>


<div class="row text-right">
    <button class="btn btn-success" ng-click="clearAddr()">Back</button>
    <button class="btn btn-success" ng-disabled="validationForm.$invalid">Next</button>
</div>
</form>
</div>

@section scripts
{
    <script src="~/Areas/Stakeholder2/ViewModels/BasicInfoScript.js"></script>


}