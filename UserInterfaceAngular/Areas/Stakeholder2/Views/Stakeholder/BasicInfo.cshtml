@{
    ViewBag.Title = "BasicInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BasicInfo</h2>
<div class="form-horizontal " data-ng-cloak="" ng-controller="basicInfoController">
    <form name="validationForm">
        
            <div class="row-fluid">
                <div class="span5 control-group">
                    <label class="control-label">Name</label>
                    <div class="controls">
                        <input type="text" class="input-large" ng-pattern="/^[a-zA-Z ]{1,100}$/" name="Name" data-ng-model="info.Name" required />
                        @*Name Validation*@
                        <div ng-show="validationForm.Name.$dirty && validationForm.Name.$invalid || validationForm.Name.$valid ">
                            <span class="field-validation-error" ng-show="validationForm.Name.$error.pattern">
                                <i class="icon-remove "></i>enter valid name
                            </span>
                            <span class="field-validation-valid" ng-show="validationForm.Name.$valid"><i class="icon-ok"></i>Valid Name </span>
                        </div>
                    </div>
                </div>
                <div class="control-group span5">
                    <label class="control-label">User Id</label>
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-user"></i></span>
                            <input type="text" ng-pattern="/^[0-9]{7}$/" ng-minlength="7" ng-maxlength="7" ng-model="info.UserId" name="UserIdBox" required>
                        </div>
                        
                       @*UserId validation*@
                        <div class="error" ng-show="validationForm.UserIdBox.$dirty && validationForm.UserIdBox.$invalid || validationForm.UserIdBox.$valid">

                            <span class="field-validation-error" ng-show="validationForm.UserIdBox.$error.pattern">
                                <i class="icon-remove "></i>{{val.OnlyNumbers()}}
                            </span>
                            <span class="field-validation-valid" ng-show="validationForm.UserIdBox.$valid">
                                <i class="icon-ok "></i>Valid UserId
                            </span>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row-fluid">
                <div class="span5 control-group">
                    <label class="control-label">Mobile No</label>
                    <div class="controls">
                        <div class="input-prepend ">
                            <span class=" add-on"><i class="icon-phone"></i></span>
                            <span class="add-on">+91</span>
                            <input type="text" class="input-medium" ng-minlength="10" name="mob" ng-pattern="/^[0-9]{10}$/" ng-maxlength="10" ng-model="info.MobileNo" required />
                        </div>

                        @* mobile validation*@

                        <div class="field-validation-error" ng-show="validationForm.mob.$invalid && validationForm.mob.$dirty || validationForm.mob.$valid">
                            <span class="field-validation-error" ng-show="validationForm.mob.$invalid && validationForm.mob.$error.pattern"><i class="icon-remove"></i>Mobile Number Must be a 10 Digit Number</span>
                            <span class="field-validation-valid" ng-show="validationForm.mob.$valid"><i class="icon-ok"></i>valid number</span>
                            <span class="text-success" ng-show="validationForm.email.$pristine"></span>
                        </div>

                    </div>
                </div>
                <div class="span5 control-group">
                    <label class="control-label">Email Id</label>
                    <div class="controls">
                        <div class="input-prepend input-append">
                            <div ng-show="isEmployee">
                                <span class="add-on"><i class="icon-envelope"></i></span>
                                <input type="email" class="input-large" ng-model="info.EmailId" name="email" data-ng-required="isEmployee" />
                            </div>
                            <div ng-show="!isEmployee">
                                <span class="add-on"><i class="icon-envelope"></i></span>
                                <input type="text" ng-pattern="/^[a-zA-Z0-9.]+$/" class="input-medium" name="scEmail" ng-model="EmailId" data-ng-required="!isEmployee" />

                                <span class="add-on">@@sc.com</span>
                            </div>
                        </div>
                        @*email validation*@
                        <div class="field-validation-error" ng-show="(validationForm.email.$invalid && validationForm.email.$dirty)||(validationForm.scEmail.$invalid && validationForm.scEmail.$dirty)">
                            <span ng-show="(validationForm.email.$dirty && validationForm.email.$invalid)||(validationForm.scEmail.$error.pattern && validationForm.scEmail.$invalid)">
                                <i class="icon-remove "></i>Invalid Email Id
                            </span>
                            <span class="field-validation-valid" ng-show="(validationForm.email.$valid)||(validationForm.scEmail.$valid)">
                                <i class="icon-ok "></i>Valid Email Id
                            </span>
                            <span class="text-success" ng-show="validationForm.email.$pristine"></span>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span5 control-group">
                    <label class="control-label">Gender</label>
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on">

                                <input type="radio" data-ng-model="info.Gender" checked="checked" value="0"><label>Male</label>

                                <input type="radio" data-ng-model="info.Gender" value="1"><label>Female</label>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="span5 control-group">
                    <label class="control-label">Date of Birth </label>
                    <div class="controls">
                        <div class="input-append">
                            <input readonly type="text" name="birthDate" class="input-medium"  data-ng-model="info.BirthDate" data-date-format="dd-mm-yyyy" data-date-end-date="-18y" bs-datepicker >
                            <button type="button" class="btn" data-toggle="datepicker"><i class="icon-calendar"></i></button>
                        </div>

                        @*validation*@
                        
                    </div>
                </div>

                <div class="row-fluid">
                    
                     <div class="span5 control-group">
                        <label class="control-label">Reporting Manager</label>
                        <div class="controls">
                            <select class="input-medium" data-ui-select2="" data-ng-model="info.ReportsTo">
                                <option></option>
                                <option data-ng-repeat="managers in reportingManager">{{managers.name}}</option>
                            </select>
                        </div>
                    </div>

                    <div ng-show="info.BirthDate  " class="span5 control-group">
                        <label class="control-label">Date Of Joining</label>
                        <div class="controls">
                            <div  class="input-append">
                                <input readonly name="joiningDate" type="text" class="input-medium" ui-validate="'$value>info.BirthDate'" data-date-start-date="-1y" data-date-end-date="+1y"
                                       data-ng-model="info.JoiningDate" data-date-format="dd-mm-yyyy" bs-datepicker required>
                                <button type="button" class="btn" data-toggle="datepicker"><i class="icon-calendar"></i></button>
                            </div>
                            @*validation*@
                           
                        </div>
                    </div>
                   
                </div>

                <div class="row-fluid text-right">

                    <button class="btn btn-success" ng-click="clear(info)">Back</button>
                    <button class="btn btn-success" ng-click="Next(info)" ng-disabled="!validationForm.$valid">Next</button>

                </div>
            </div>
    </form>
</div>

@section scripts
{
    <script src="~/Areas/Stakeholder2/ViewModels/BasicInfoScript.js"></script>
}
