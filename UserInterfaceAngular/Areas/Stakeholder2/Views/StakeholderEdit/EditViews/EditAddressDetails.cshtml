
<div class="row-fluid">
    <div class="control-group span5">
        <label class="control-label">Line 1</label>
        <div class="controls">
            <input type="text" data-ng-maxlength="100" data-ng-model="Stakeholder.GAddress[0].Line1" data-ng-required="Hierarchy.HasAddress" />
        </div>
    </div>
    <div class="control-group span5">
        <label class="control-label">Line 2</label>
        <div class="controls">
            <input type="text" class="input-large" data-ng-model="Stakeholder.GAddress[0].Line2" data-ng-maxlength="100" data-ng-required="Hierarchy.HasAddress">
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="control-group span5">
        <label class="control-label">Line 3</label>
        <div class="controls">
            <input type="text" data-ng-maxlength="100" data-ng-model="Stakeholder.GAddress[0].Line3" />
        </div>
    </div>
    <div class="control-group span5">
        <label class="control-label">Landline No</label>
        <div class="controls">
            <div class="input-prepend">
                <span class="add-on"><i class="icon-phone"></i></span>
                <span class="add-on">+91</span>

                <input type="text" class="input-medium"
                    data-ng-pattern="/^[0-9]{11}$/"
                    name="landline"
                    data-ng-model="Stakeholder.GAddress[0].LandlineNo">
            </div>
            <div data-ng-show="validationForm.landline.$invalid && validationForm.landline.$dirty || validationForm.pincode.$valid">
                <span class="field-validation-error" data-ng-show="validationForm.landline.$invalid && validationForm.landline.$error.pattern"><i class="icon-remove"></i>Invalid LandLine Number</span>
                <span class="field-validation-valid" data-ng-show="validationForm.landline.$valid"><i class="icon-ok"></i>Valid </span>
                <span class="text-success" data-ng-show="validationForm.email.$pristine"></span>
            </div>

        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="control-group span5">
        <label class="control-label">Pincode</label>
        <div class="controls">
            <input type="text"
                class="input-medium"
                data-ng-model="Pincode"
                typeahead="c.Area for c in Pincodes($viewValue, 'Area')"
                data-ng-change="setPincodeOnArea(Pincode)"
                data-ng-required="Hierarchy.HasAddress">
        </div>


        <div data-ng-show="validationForm.pincode.$invalid && validationForm.pincode.$dirty ">
            <span class="field-validation-error" data-ng-show="validationForm.pincode.$invalid && validationForm.pincode.$error.pattern"><i class="icon-remove"></i>Invalid Pincode</span>
        </div>
    </div>
    <div class="control-group span5">
        <div class="row-fluid">
        </div>
    </div>
</div>
