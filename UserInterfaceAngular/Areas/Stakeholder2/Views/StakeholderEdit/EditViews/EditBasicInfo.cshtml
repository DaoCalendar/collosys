<!---->
<div class="row-fluid">
    <div class="span5 control-group">
        <label class="control-label">Name </label>
        <div class="controls">
            <input type="text"
                class="input-large"
                data-ng-pattern="/^[a-zA-Z ]{1,100}$/"
                name="Name"
                data-ng-model="Stakeholder.Name" required />
            @*Name Validation*@
            <div data-ng-show="basicInfoForm.Name.$dirty && basicInfoForm.Name.$invalid || basicInfoForm.Name.$valid ">
                <span class="field-validation-error" data-ng-show="basicInfoForm.Name.$error.pattern">
                    <i class="icon-remove "></i>enter valid name
                </span>
                <span class="field-validation-valid" data-ng-show="basicInfoForm.Name.$valid"><i class="icon-ok"></i>Valid Name </span>
            </div>
        </div>
    </div>
    <div class="control-group span5">
        <label class="control-label">User Id</label>
        <div class="controls">
            <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                <input type="text"
                    data-ng-pattern="/^[0-9]{7}$/"
                    data-ng-minlength="7"
                    data-ng-maxlength="7"
                    data-ng-model="Stakeholder.ExternalId"
                    name="UserIdBox" data-ng-required="Hierarchy.IsUser">
            </div>

            @*UserId validation*@
            <div class="error" data-ng-show="basicInfoForm.UserIdBox.$dirty && basicInfoForm.UserIdBox.$invalid || basicInfoForm.UserIdBox.$valid">

                <span class="field-validation-error" data-ng-show="basicInfoForm.UserIdBox.$error.pattern">
                    <i class="icon-remove "></i>{{val.OnlyNumbers()}}
                </span>
                <span class="field-validation-valid" data-ng-show="basicInfoForm.UserIdBox.$valid">
                    <i class="icon-ok "></i>Valid UserId
                </span>
            </div>
        </div>

    </div>
</div>

<div class="row-fluid">
    <div class="span5 control-group">
        <label class="control-label">Mobile No</label>
        <div class="controls">
            <div class="input-prepend ">
                <span class=" add-on"><i class="icon-phone"></i></span>
                <span class="add-on">+91</span>
                <input type="text"
                    class="input-medium"
                    data-ng-minlength="10"
                    name="mob"
                    data-ng-pattern="/^[0-9]{10}$/"
                    data-ng-maxlength="10"
                    data-ng-model="Stakeholder.MobileNo"
                    required />
            </div>

            @* mobile validation*@

            <div class="field-validation-error"
                data-ng-show="basicInfoForm.mob.$invalid && basicInfoForm.mob.$dirty || basicInfoForm.mob.$valid">
                <span class="field-validation-error" data-ng-show="basicInfoForm.mob.$invalid && basicInfoForm.mob.$error.pattern"><i class="icon-remove"></i>Mobile Number Must be a 10 Digit Number</span>
                <span class="field-validation-valid" data-ng-show="basicInfoForm.mob.$valid"><i class="icon-ok"></i>valid number</span>
                <span class="text-success" data-ng-show="basicInfoForm.email.$pristine"></span>
            </div>

        </div>
    </div>
    <div class="span5 control-group">
        <label class="control-label">Email Id</label>
        <div class="controls">

            <div data-ng-show="SelectedHier.Hierarchy == 'External'">
                <div class="input-prepend input-append">
                    <span class="add-on"><i class="icon-envelope"></i></span>
                    <input type="email"
                        class="input-large" data-ng-model="Stakeholder.EmailId" name="email" data-ng-required="SelectedHier.Hierarchy == 'External'" />
                </div>
            </div>
            <div data-ng-show="SelectedHier.Hierarchy != 'External'">

                <div class="input-prepend input-append">
                    <span class="add-on"><i class="icon-envelope"></i></span>
                    <input type="text"
                        data-ng-pattern="/^[a-zA-Z0-9.]+$/"
                        class="input-medium"
                        name="scEmail"
                        data-ng-model="Stakeholder.EmailId"
                        data-ng-required="SelectedHier.Hierarchy != 'External'"
                        data-ng-model="Email"
                        data-ng-required="!isEmployee" />

                    <span class="add-on">@@sc.com</span>
                </div>
                @*email validation*@
                <div class="field-validation-error" data-ng-show="(basicInfoForm.email.$invalid && basicInfoForm.email.$dirty)||(basicInfoForm.scEmail.$invalid && basicInfoForm.scEmail.$dirty)">
                    <span data-ng-show="(basicInfoForm.email.$dirty && basicInfoForm.email.$invalid)||(basicInfoForm.scEmail.$error.pattern && basicInfoForm.scEmail.$invalid)">
                        <i class="icon-remove "></i>Invalid Email Id
                    </span>
                    <span class="field-validation-valid" data-ng-show="(basicInfoForm.email.$valid)||(basicInfoForm.scEmail.$valid)">
                        <i class="icon-ok "></i>Valid Email Id
                    </span>
                    <span class="text-success" data-ng-show="basicInfoForm.email.$pristine"></span>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span5 control-group" data-ng-show="Hierarchy.IsIndividual">
        <label class="control-label">Gender</label>
        <div class="controls">
            <label>{{Stakeholder.Gender}}</label>
            @* <div class="input-prepend">
                    <span class="add-on">

                        <input type="radio" data-ng-model="Stakeholder.Gender" checked="checked" value="0"><label>Male</label>

                        <input type="radio" data-ng-model="Stakeholder.Gender" value="1"><label>Female</label>
                    </span>
                </div>*@
        </div>
    </div>
    <div class="span5 control-group">
        <label class="control-label">Date of Birth </label>
        <div class="controls">
            <div class="input-append">
                <input readonly
                    type="text"
                    name="birthDate"
                    class="input-medium"
                    data-ng-required="Hierarchy.IsIndividual"
                    data-ng-model="Stakeholder.BirthDate"
                    data-date-format="dd-mm-yyyy"
                    data-date-end-date="-18y"
                    bs-datepicker />
                <button type="button"
                    class="btn"
                    data-toggle="datepicker">
                    <i class="icon-calendar"></i>
                </button>
            </div>

            @*validation*@

        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span5 control-group">
        <label class="control-label">Reporting Manager</label>
        <div class="controls">
            <select class="input-medium" data-ui-select2="" data-ng-model="Stakeholder.ReportsTo">
                <option></option>
                <option data-ng-repeat="managers in reportingManager">{{managers.name}}</option>
            </select>
        </div>
    </div>

    <div data-ng-show="Stakeholder.BirthDate" class="span5 control-group">
        <label class="control-label">Date Of Joining</label>
        <div class="controls" data-ng-hide="Hierarchy.IsIndividual">
            <div class="input-append">
                <input readonly
                    name="joiningDate"
                    type="text"
                    class="input-medium"
                    ui-validate="'$value>Stakeholder.BirthDate'"
                    data-ng-required="!Hierarchy.IsIndividual"
                    data-date-start-date="-1y"
                    data-date-end-date="+1y"
                    data-ng-model="Stakeholder.JoiningDate"
                    data-date-format="dd-mm-yyyy"
                    bs-datepicker>
                <button type="button" class="btn" data-toggle="datepicker"><i class="icon-calendar"></i></button>
            </div>
        </div>
    </div>
</div>

