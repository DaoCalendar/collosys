<div class="row-fluid">
    <div class="control-group span5">
        <label class="control-label">Name</label>
        <div class="controls">
            <input readonly type="text" data-ng-model="data.Name">
        </div>
    </div>
    <div class="control-group span5">
        <label class="control-label">Email ID</label>
        <div class="controls">
            <input type="text" data-ng-model="data.EmailId" readonly >
        </div>
    </div>
    <div class="controls text-right">
        <input type="checkbox" data-ng-model="selected" ng-click="selectedStakeholder(data,selected)" />@*<label class="control-label">Select </label>*@
    </div>
</div>
<div class="row-fluid">
    <div class="control-group span5">
        <label class="control-label">Date of Joining</label>
        <div class="controls">
            <input type="text" readonly value="{{data.JoiningDate|date:dd-MM-yyyy}}">
        </div>
    </div>
    <div class="control-group span5">
        <label class="control-label">Date of Birth</label>
        <div class="controls">
            <input type="text" readonly value="{{data.BirthDate|date:dd-MM-yyyy}}">
        </div>
    </div>
    @*view more details*@
    <div data-ng-show="moreDetails==$index+'MoreDetails'">
        <div class="row-fluid">
            <div class="control-group span5">
                <label class="control-label">User Id</label>
                <div class="controls">
                    <input type="text" readonly data-ng-model="data.ExternalId">
                </div>
            </div>
            <div class="control-group span5">
                <label class="control-label">Mobile Number</label>
                <div class="controls">
                    <input type="text" readonly data-ng-model="data.MobileNo">
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="control-group span5">
                <label class="control-label">Gender</label>
                <div class="controls">
                    <input type="text" readonly data-ng-model="data.Gender">
                </div>
            </div>
            <div class="control-group span5">
                <label class="control-label"
                    data-ng-show="stakeholder.Hierarchy!='External'">
                    Line Manager 
                </label>
                <label class="control-label"
                    data-ng-show="stakeholder.Hierarchy=='External' &&
                !(getLabelDisplay(stakeholder.Designation) =='ExternalAgency' || 
                getLabelDisplay(stakeholder.Designation) =='ManpowerAgency')">
                    Agency Name
                </label>
                <label class="control-label"
                    data-ng-show=" (getLabelDisplay(stakeholder.Designation)=='ExternalAgency' ||
               getLabelDisplay(stakeholder.Designation)=='ManpowerAgency')">
                    Agency Supervisor
                </label>
                @* <label class="control-label">Reporting Manager</label>*@
                <div class="controls">
                    <input type="text" readonly data-ng-model="data.ReportingManagerName">
                </div>
            </div>
        </div>
    </div>

    @*view address*@
    <div data-ng-show="moreDetails==$index+'AddressDetails' && data.Hierarchy.HasAddress">
        <div class="row-fluid">
            <div class="control-group span5">
                <label class="control-label">Line 1</label>
                <div class="controls">
                    <input type="text" readonly value="{{data.GAddress[0].Line1}}">
                </div>
            </div>
            <div class="control-group span5">
                <label class="control-label">Line 2</label>
                <div class="controls">
                    <input type="text" readonly value="{{data.GAddress[0].Line2}}">
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="control-group span5">
                <label class="control-label">Line 3</label>
                <div class="controls">
                    <input type="text" readonly value="{{data.GAddress[0].Line3}}">
                </div>
            </div>
            <div class="control-group span5">
                <label class="control-label">Pincode</label>
                <div class="controls">
                    <input type="text" readonly value="{{data.GAddress[0].Pincode}}">
                </div>
            </div>
        </div>
    </div>
    @*Reject*@
    <div class="row-fluid" data-ng-show="moreDetails==$index+'Description'" data-ng-form="Reject">
        <div class="control-group span5">
            <label class="control-label">Reject Description</label>
            <div class="controls">
                <input type="text" data-ng-model="description" name="Description" data-ng-required="true">
            </div>
        </div>
        <div class="control-group span5">
            <div class="controls">
                <button class="btn btn-success" data-ng-disabled="Reject.Description.$error.required" data-ng-click="reject(data,description)">Reject</button>
            </div>
        </div>
    </div>

    <div class="row span12" style="text-align: center">
        <button class="btn btn-link" data-ng-show="canModify"@* data-ng-disabled="chosenStakeholders.length>0"*@ data-ng-click="editStakeholder(data)">Edit</button>
        <button class="btn btn-link" data-ng-show="canApprove" data-ng-click="approve(data)" data-ng-disabled="data.Status === 'Approved'">Approve</button>
        <button class="btn btn-link" data-ng-show="canApprove" data-ng-disabled="data.Status === 'Rejected'||data.Status === 'Approved'" data-ng-click="seeMoreDetail($index,'Description')">Reject</button>
        <button class="btn btn-link" data-ng-click="seeMoreDetail( $index, 'MoreDetails' )">View More Details</button>
        <button class="btn btn-link" data-ng-click="seeMoreDetail( $index, 'AddressDetails')" data-ng-disabled="!data.Hierarchy.HasAddress">View Address</button>
        <button class="btn btn-link" data-ng-click="seeMoreDetail($index,'PaymentDetails')" data-ng-disabled="data.StkhPayments.length==0">View Payment</button>
        <button class="btn btn-link" data-ng-click="seeMoreDetail($index,'RegistrationDetails')" data-ng-disabled="data.StkhRegistrations.length==0">View Registration</button>
        <button class="btn btn-link" data-ng-class="{redlink:displayApproveReject(data)}" data-ng-click="seeMoreDetail($index,'WorkingDetails')" data-ng-disabled="data.StkhWorkings.length==0">View Working</button>
        <button class="btn btn-link" data-ng-click="seeMoreDetail($index,'ReporteeDetails');clickOnReportee($index)">View Reportee</button>
    </div>
</div>
<style>
    .redlink {
        color: red;
    }
</style>

