@{
    ViewBag.Title = "GenerateDB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" data-ng-controller="DbGenerationController" style="padding-top: 30px">
    <div class="panel">
        <div class="panel-heading">
            Generate DB
        </div>
        <div class="row-fluid form-horizontal">
            <div class="control-group">
                <div class="controls">
                    <button class="btn btn-info" data-ng-click="generateDB()">Generate DB</button>
                </div>
            </div>
        </div>
    </div>

    <div class="panel" ng-form="encryptForm">
        <div class="panel-heading">
            Encrypt / Decrypt Sections Web.config
        </div>
        <div class="row-fluid form-horizontal">
            <div class="control-group">
                <label class="control-label">Select Section</label>
                <div class="controls">
                    <select data-ng-model="sectionName" id="section" ng-options="c for c in sections" required>
                        <option value=""></option>
                    </select>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input type="button" ng-click="encryptSection()" ng-disabled="!encryptForm.$valid" class="btn btn-info" value="Encrypt Section" />
                    <input type="button" ng-click="decryptSection()" ng-disabled="!encryptForm.$valid" class="btn btn-info" value="Decrypt Section" />
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Areas/Developer/ViewModels/GenerateDB.js"></script>
}
