@{
    ViewBag.Title = "ModalTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ModalTest</h2> 
<div data-ng-app="plunker">
<div data-ng-controller="DialogDemoCtrl">
    <div class="row-fluid">
        <div class="span6">
            <label class="checkbox">
                <input type="checkbox" data-ng-model="opts.backdrop" />Show backdrop</label>
            <label class="checkbox">
                <input type="checkbox" data-ng-model="opts.dialogFade" />Fade modal dialog </label>
            <label class="checkbox">
                <input type="checkbox" data-ng-disabled="!opts.backdrop" data-ng-model="opts.backdropFade" />Fade Backdrop</label>
            <hr>
            <label class="checkbox">
                <input type="checkbox" data-ng-model="opts.keyboard" />Close on Escape</label>
            <label class="checkbox">
                <input type="checkbox" data-ng-disabled="!opts.backdrop" data-ng-model="opts.backdropClick" />Close on backdrop click</label>
        </div>
        <div class="span6">
            <p>Change options at will and press the open dialog button below!</p>
            <p>
                <button class="btn btn-primary" data-ng-click="openDialog()">Open Dialog</button></p>

            <p>Alternatively open a simple message box:</p>
            <p>
                <button class="btn btn-primary" data-ng-click="openMessageBox()">Open Message Box</button></p>
        </div>
    </div>
</div>
</div>
@section scripts{
    <script src="~/Areas/Generic/ViewModels/TestModal.js"></script>
}
