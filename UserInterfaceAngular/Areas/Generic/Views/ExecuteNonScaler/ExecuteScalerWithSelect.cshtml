@{
    ViewBag.Title = "Select With Aggregate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ColloSys.UserInterface.Areas.Generic.Models
@model ColloSys.UserInterface.Areas.Generic.Models.QueryResult

<div class="container-fluid">
    <div class="row-fluid">
        <ul class="nav nav-tabs">
            <li>@Html.ActionLink("Execute Select", "ExecuteNonScalerSql")</li>
            <li>@Html.ActionLink("Execute Update, Delete", "ExecuteUpdateDelete")</li>
            <li>@Html.ActionLink("Execute Select with Aggregate", "ExecuteScalerWithSelect")</li>
            <li>@Html.ActionLink("Back", "Index")</li>
        </ul>  
        <hr/>
    </div>

    @using (Html.BeginForm("ExecuteScalerWithSelect", "ExecuteNonScaler", FormMethod.Post))
    {
        <div class="row-fluid form-horizontal">
            <div class="control-group">
                <label class="control-label">Enter Sql query with aggregate function like count</label>
                <div class="controls">
                    @Html.TextArea("Query")
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            @if (Model.RowsAffected > 0)
            {
                <label class="info">Result: @Model.RowsAffected</label>
            }
            else
            {
                <label class="warning">@Model.Error</label>
            }
        </div>
    }
</div>

@if (QueryResult.Queries != null)
{
    foreach (var query in QueryResult.Queries)
    {
        <div class="alert-success">
            <span>@query</span><br/>
        </div>
    }
}

@section styles
{
    <style>
        textarea
        {
            width: 750px;
            height: 200px;
        }
    </style>
}
