@{
    ViewBag.Title = "ExecuteNonScalerSql";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ColloSys.UserInterface.Areas.Generic.Models
@model ColloSys.UserInterface.Areas.Generic.Models.QueryResult

<div class="container-fluid" >
    <div class="row-fluid">
        <ul class="nav nav-tabs">
           <li>@Html.ActionLink("Execute Select", "ExecuteNonScalerSql")</li>
            <li>@Html.ActionLink("Execute Update, Delete", "ExecuteUpdateDelete")</li>
            <li>@Html.ActionLink("Execute Select with Aggregate", "ExecuteScalerWithSelect")</li>
            <li>@Html.ActionLink("Back", "Index")</li>
        </ul>                       
        <hr/>
    </div>

     @using (Html.BeginForm("ExecuteNonScalerSql", "ExecuteNonScaler", FormMethod.Post))
    {
        <div class="row-fluid form-horizontal">
            <div class="control-group span12">
                <label class="control-label">Enter Select Query</label>
                <div class="controls">
                    @Html.TextArea("Query")
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            @if (Model.Data != null && Model.Data.Rows.Count > 0)
            {
                @Html.Partial("ShowResult", Model.Data)
            }
            else
            {
                @Html.LabelFor(m => m.Error)
            }
        </div>
        
        
    }
</div>

@if (QueryResult.Queries != null)
{
    foreach (var query in QueryResult.Queries.Reverse())
    {
        <div class="row-fluid alert-success">
            <span>@query</span><br/>
        </div>
    }
}



@section styles
{
    <style>
        textarea
        {
            width: 750px;
            height: 200px;
        }
    </style>
}
